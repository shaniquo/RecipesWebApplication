<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" href="/css/styles.css" />

    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="/css/AdminStyleSheet.css" type="text/css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body class="m-1 p-1">
    <div >

        <div class="col">
            <h1 class="text-center text-capitalize">@ViewBag.Heading</h1>
            <div margin-left="auto" margin-right="auto" >
                <ul class="nav nav-justified" id="adminMenuList" >
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-action="Index" asp-controller="Admin">Recipe List</a></li>
                    <li><a asp-action="Index" asp-controller="Cuisine">Cuisine List</a></li>
                    <li><a  asp-action="Logout" asp-controller="Account">Log Out</a></li>
                </ul>
            </div>
            <hr />
        </div>
    </div>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success mt-1">@TempData["message"]</div>
    }
    @RenderBody()
    <footer class="text-center">
            <h6>&copy;&nbsp;&nbsp; Copright Eunseok Choi, Hassan Shabbir, Jarod Lavine, Manal Hagos, Shaniquo McKenzie  . COMP229 . Fall 2019 . Recipe System Cusine Update: @ViewBag.Title </h6>
    </footer>
</body>
</html>
